local function CreateSection(name, titleText, accentColor)
    local Section = Instance.new("Frame")
    Section.Name = name
    Section.Size = UDim2.new(1, 0, 1, 0)
    Section.BackgroundTransparency = 1
    Section.Visible = false
    Section.Parent = ContentContainer
    ContentFrames[name] = Section
    
    local Header = Instance.new("Frame")
    Header.Size = UDim2.new(1, 0, 0, 50)
    Header.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
    Header.BackgroundTransparency = 0.5
    Header.Parent = Section
    
    local HeaderCorner = Instance.new("UICorner")
    HeaderCorner.CornerRadius = UDim.new(0, 10)
    HeaderCorner.Parent = Header
    
    local BackBtn = Instance.new("TextButton")
    BackBtn.Size = UDim2.new(0, 80, 0, 36)
    BackBtn.Position = UDim2.new(0, 10, 0.5, -18)
    BackBtn.BackgroundColor3 = accentColor
    BackBtn.Text = GetText("Back")
    BackBtn.TextColor3 = Color3.new(1,1,1)
    BackBtn.TextSize = 16
    BackBtn.Font = Enum.Font.GothamBold
    BackBtn.Parent = Header
    table.insert(UILabels, {Label = BackBtn, Key = "Back"})
    
    local BackCorner = Instance.new("UICorner")
    BackCorner.CornerRadius = UDim.new(0, 8)
    BackCorner.Parent = BackBtn
    
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(0, 200, 1, 0)
    Title.Position = UDim2.new(0.5, -100, 0, 0)
    Title.BackgroundTransparency = 1
    Title.Text = titleText
    Title.TextColor3 = accentColor
    Title.TextSize = 24
    Title.Font = Enum.Font.GothamBold
    Title.Parent = Header
    
    local Content = Instance.new("ScrollingFrame")
    Content.Name = "Content"
    Content.Size = UDim2.new(1, 0, 1, -60)
    Content.Position = UDim2.new(0, 0, 0, 60)
    Content.BackgroundTransparency = 1
    Content.ScrollBarThickness = 3
    Content.ScrollBarImageColor3 = accentColor
    Content.CanvasSize = UDim2.new(0, 0, 3, 0)
    Content.Parent = Section
    
    BackBtn.MouseButton1Click:Connect(function()
        Section.Visible = false
        ContentFrames["Home"].Visible = true
        SwitchTab("Home")
    end)
    
    return Section, Content
end
