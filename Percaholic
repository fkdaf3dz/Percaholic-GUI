local function UpdateServerInfo()
    local currentPlayers = #Players:GetPlayers()
    local maxPlayers = Players.MaxPlayers
    PlayersLabel.Text = "Players: " .. currentPlayers .. " / " .. maxPlayers
    
    spawn(function()
        local success, result = pcall(function()
            local url = "https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"
            local response = game:HttpGet(url)
            local data = HttpService:JSONDecode(response)
            if data and data.data then
                for _, server in ipairs(data.data) do
                    if server.id == game.JobId then
                        PlayersLabel.Text = "Players: " .. server.playing .. " / " .. server.maxPlayers
                        if server.region then
                            RegionLabel.Text = "Region: " .. server.region
                        end
                        if server.ping then
                            UptimeLabel.Text = "Ping: " .. math.floor(server.ping) .. "ms"
                        end
                        break
                    end
                end
            end
        end)
    end)
end

RefreshBtn.MouseButton1Click:Connect(UpdateServerInfo)
UpdateServerInfo()

spawn(function()
    while wait(10) do
        if ServersContent.Parent and ServersContent.Parent.Visible then
            UpdateServerInfo()
        end
    end
end)
