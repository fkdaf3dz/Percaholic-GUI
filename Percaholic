local UILabels = {}
local ContentFrames = {}
local TabButtons = {}
local ConfettiParticles = {}

local function GetText(key)
    local lang = Perky.Settings.Language or "English"
    if Translations[lang] and Translations[lang][key] then
        return Translations[lang][key]
    end
    return Translations["English"][key] or key
end

local function SaveSettings()
    local json = HttpService:JSONEncode(Perky.Settings)
    writefile("Perky_Config.json", json)
end

local function LoadSettings()
    if isfile("Perky_Config.json") then
        local json = readfile("Perky_Config.json")
        local success, data = pcall(function() 
            return HttpService:JSONDecode(json) 
        end)
        if success then
            for k, v in pairs(data) do
                if k ~= "Presets" or type(v) == "table" then
                    Perky.Settings[k] = v
                end
            end
            if not Perky.Settings.Presets then
                Perky.Settings.Presets = {}
            end
        end
    end
end

pcall(LoadSettings)
