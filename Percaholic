local function CreateScriptButton(name, url, parent, color)
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(1, 0, 0, 50)
    Btn.Position = UDim2.new(0, 0, 0, #parent:GetChildren() * 60)
    Btn.BackgroundColor3 = color
    Btn.Text = name
    Btn.TextColor3 = Color3.new(1,1,1)
    Btn.TextSize = 18
    Btn.Font = Enum.Font.GothamBold
    Btn.AutoButtonColor = true
    Btn.Parent = parent
    
    local BtnCorner = Instance.new("UICorner")
    BtnCorner.CornerRadius = UDim.new(0, 10)
    BtnCorner.Parent = Btn
    
    Btn.MouseButton1Click:Connect(function()
        Btn.Text = "Loading..."
        Btn.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
        
        spawn(function()
            local success, err = pcall(function()
                loadstring(game:HttpGet(url))()
            end)
            
            if success then
                Btn.Text = "Loaded!"
                Btn.BackgroundColor3 = Color3.fromRGB(34, 197, 94)
                wait(2)
                Btn.Text = name
                Btn.BackgroundColor3 = color
            else
                Btn.Text = "Failed!"
                Btn.BackgroundColor3 = Color3.fromRGB(220, 50, 50)
                wait(2)
                Btn.Text = name
                Btn.BackgroundColor3 = color
            end
        end)
    end)
    
    return Btn
end
--[[    Perky v0.0.30 - Section 16 of 18 - Script Buttons & Credits    ]]

CreateScriptButton("Aimlocker by fkdaf3dz", "https://raw.githubusercontent.com/fkdaf3dz/Aimlock-OP/refs/heads/main/Aimlock", MainScriptsContent, Color3.fromRGB(147, 51, 234))
CreateScriptButton(GetText("PrisonLife"), "https://raw.githubusercontent.com/zenss555a/script/refs/heads/main/Prison-Life.lua", OtherScriptsContent, Color3.fromRGB(220, 50, 50))
CreateScriptButton(GetText("FuncsStuff"), "https://raw.githubusercontent.com/K9ntra/FuncsAndStuff/refs/heads/main/abc.luau", OtherScriptsContent, Color3.fromRGB(50, 150, 220))

MainScriptsBtn.MouseButton1Click:Connect(function()
    MainScriptsContent.Visible = true
    OtherScriptsContent.Visible = false
    MainScriptsBtn.BackgroundColor3 = ThemeColors[Perky.Settings.Theme].Primary
    MainScriptsBtn.TextColor3 = Color3.new(1,1,1)
    OtherScriptsBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
    OtherScriptsBtn.TextColor3 = Color3.fromRGB(180, 180, 180)
end)

OtherScriptsBtn.MouseButton1Click:Connect(function()
    MainScriptsContent.Visible = false
    OtherScriptsContent.Visible = true
    OtherScriptsBtn.BackgroundColor3 = ThemeColors[Perky.Settings.Theme].Primary
    OtherScriptsBtn.TextColor3 = Color3.new(1,1,1)
    MainScriptsBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
    MainScriptsBtn.TextColor3 = Color3.fromRGB(180, 180, 180)
end)

local originalApplyTheme = ApplyTheme
ApplyTheme = function(themeName)
    local theme = ThemeColors[themeName] or ThemeColors.Purple
    originalApplyTheme(themeName)
    
    if MainScriptsBtn and OtherScriptsBtn then
        if MainScriptsContent.Visible then
            MainScriptsBtn.BackgroundColor3 = theme.Primary
            MainScriptsBtn.TextColor3 = Color3.new(1,1,1)
            OtherScriptsBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
            OtherScriptsBtn.TextColor3 = Color3.fromRGB(180, 180, 180)
        else
            OtherScriptsBtn.BackgroundColor3 = theme.Primary
            OtherScriptsBtn.TextColor3 = Color3.new(1,1,1)
            MainScriptsBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
            MainScriptsBtn.TextColor3 = Color3.fromRGB(180, 180, 180)
        end
    end
end

