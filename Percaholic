local function CreateActionButton(text, posY, color, key)
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(0, 180, 0, 40)
    Btn.Position = UDim2.new(0, 10, 0, posY)
    Btn.BackgroundColor3 = color
    Btn.Text = text
    Btn.TextColor3 = Color3.new(1,1,1)
    Btn.TextSize = 16
    Btn.Font = Enum.Font.GothamBold
    Btn.ZIndex = 5
    Btn.Parent = ActionCard
    if key then table.insert(UILabels, {Label = Btn, Key = key}) end
    
    local BtnCorner = Instance.new("UICorner")
    BtnCorner.CornerRadius = UDim.new(0, 10)
    BtnCorner.Parent = Btn
    
    return Btn
end

local SaveBtn = CreateActionButton(GetText("SaveSettings"), 10, Color3.fromRGB(147, 51, 234), "SaveSettings")
