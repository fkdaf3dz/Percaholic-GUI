            math.max(ThemeColors[theme].Primary.B * 255 - 20, 0)
        )
        ExportBtn.BackgroundColor3 = Color3.fromRGB(
            math.max(ThemeColors[theme].Primary.R * 255 - 40, 0),
            math.max(ThemeColors[theme].Primary.G * 255 - 40, 0),
            math.max(ThemeColors[theme].Primary.B * 255 - 40, 0)
        )
        SaveSettings()
    end)
end

ThemeDropdown.MouseButton1Click:Connect(function()
    ThemeFrame.Visible = not ThemeFrame.Visible
    LangFrame.Visible = false
end)

local sliderDragging = false
local sliderConnection = nil

local function UpdateSlider(input)
    local relativeX = input.Position.X - TransTrack.AbsolutePosition.X
    local scale = math.clamp(relativeX / TransTrack.AbsoluteSize.X, 0, 1)
    
    Perky.Settings.BackgroundTransparency = scale
    TransFill.Size = UDim2.new(scale, 0, 1, 0)
    TransKnob.Position = UDim2.new(scale, -10, 0.5, -10)
    TransTitle.Text = GetText("Transparency") .. ": " .. string.format("%.2f", scale)
    ApplyTransparency(scale)
    SaveSettings()
end

TransKnob.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        sliderDragging = true
        
        if sliderConnection then sliderConnection:Disconnect() end
        sliderConnection = UserInputService.InputChanged:Connect(function(changedInput)
            if sliderDragging and (changedInput.UserInputType == Enum.UserInputType.MouseMovement or changedInput.UserInputType == Enum.UserInputType.Touch) then
                UpdateSlider(changedInput)
            end
        end)
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        sliderDragging = false
        if sliderConnection then
            sliderConnection:Disconnect()
            sliderConnection = nil
        end
    end
end)

TransTrack.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        UpdateSlider(input)
    end
end)

EnableToggle.MouseButton1Click:Connect(function()
    Perky.Settings.UIEnabled = not Perky.Settings.UIEnabled
    SaveSettings()
    
    if Perky.Settings.UIEnabled then
        EnableToggle.BackgroundColor3 = ThemeColors[Perky.Settings.Theme].Primary
        ToggleCircle:TweenPosition(UDim2.new(1, -24, 0.5, -11), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
        Main.BackgroundTransparency = Perky.Settings.BackgroundTransparency
    else
        EnableToggle.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
        ToggleCircle:TweenPosition(UDim2.new(0, 2, 0.5, -11), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
        Main.BackgroundTransparency = 1
    end
end)
--[[    Perky v0.0.30 - Section 12 of 12 - Final Logic & Init    ]]

local function RefreshPresetList()
    for _, child in ipairs(PresetList:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
    
    for name, _ in pairs(Perky.Settings.Presets) do
        local PresetBtn = Instance.new("TextButton")
        PresetBtn.Size = UDim2.new(1, -10, 0, 30)
        PresetBtn.Position = UDim2.new(0, 5, 0, 0)
        PresetBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
        PresetBtn.Text = name
        PresetBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        PresetBtn.TextSize = 14
        PresetBtn.Font = Enum.Font.Gotham
        PresetBtn.Parent = PresetList
        
        local BtnCorner = Instance.new("UICorner")
        BtnCorner.CornerRadius = UDim.new(0, 6)
        BtnCorner.Parent = PresetBtn
        
        PresetBtn.MouseButton1Click:Connect(function()
            PresetNameInput.Text = name
        end)
    end
    PresetList.CanvasSize = UDim2.new(0, 0, 0, #PresetList:GetChildren() * 34)
end

SavePresetBtn.MouseButton1Click:Connect(function()
    local name = PresetNameInput.Text
    if name and name ~= "" then
        Perky.Settings.Presets[name] = HttpService:JSONDecode(HttpService:JSONEncode(Perky.Settings))
        Perky.Settings.Presets[name].Presets = nil
        SaveSettings()
        RefreshPresetList()
        SavePresetBtn.Text = "Saved!"
        wait(1)
        SavePresetBtn.Text = GetText("SavePreset")
    end
end)

LoadPresetBtn.MouseButton1Click:Connect(function()
    local name = PresetNameInput.Text
    if name and Perky.Settings.Presets[name] then
        local preset = Perky.Settings.Presets[name]
        for k, v in pairs(preset) do
            if k ~= "Presets" then
                Perky.Settings[k] = v
            end
        end
        SaveSettings()
        LoadPresetBtn.Text = "Loaded!"
        
        LangDropdown.Text = Perky.Settings.Language .. " ‚ñº"
        ThemeDropdown.Text = Perky.Settings.Theme .. " ‚ñº"
        ApplyTheme(Perky.Settings.Theme)
        ApplyTransparency(Perky.Settings.BackgroundTransparency)
        TransFill.Size = UDim2.new(Perky.Settings.BackgroundTransparency, 0, 1, 0)
        TransKnob.Position = UDim2.new(Perky.Settings.BackgroundTransparency, -10, 0.5, -10)
        TransTitle.Text = GetText("Transparency") .. ": " .. string.format("%.2f", Perky.Settings.BackgroundTransparency)
        
        wait(1)
        LoadPresetBtn.Text = GetText("LoadPreset")
    end
end)

SaveBtn.MouseButton1Click:Connect(function()
    SaveSettings()
    SaveBtn.Text = GetText("Saved")
    wait(1)
    SaveBtn.Text = GetText("SaveSettings")
end)

ResetBtn.MouseButton1Click:Connect(function()
    Perky.Settings = {Language = "English", Webhook = "", BackgroundID = "", Theme = "Purple", BackgroundTransparency = 0.05, UIEnabled = true, Presets = Perky.Settings.Presets or {}}
    SaveSettings()
    LangDropdown.Text = "English ‚ñº"
    ThemeDropdown.Text = "Purple ‚ñº"
    ApplyTheme("Purple")
    ApplyTransparency(0.05)
    TransFill.Size = UDim2.new(0.05, 0, 1, 0)
    TransKnob.Position = UDim2.new(0.05, -10, 0.5, -10)
    TransTitle.Text = GetText("Transparency") .. ": 0.05"
    EnableToggle.BackgroundColor3 = ThemeColors.Purple.Primary
    ToggleCircle.Position = UDim2.new(1, -24, 0.5, -11)
    Main.BackgroundTransparency = 0.05
    SaveBtn.BackgroundColor3 = Color3.fromRGB(147, 51, 234)
    ResetBtn.BackgroundColor3 = Color3.fromRGB(126, 34, 206)
    ExportBtn.BackgroundColor3 = Color3.fromRGB(109, 40, 217)
    ResetBtn.Text = GetText("Reset")
    wait(1)
    ResetBtn.Text = GetText("ResetSettings")
end)

ExportBtn.MouseButton1Click:Connect(function()
    local json = HttpService:JSONEncode(Perky.Settings)
    setclipboard(json)
    ExportBtn.Text = GetText("Copied")
    wait(1)
    ExportBtn.Text = GetText("ExportConfig")
end)

ScriptContent.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        local pos = input.Position
        
        if LangFrame.Visible then
            local absPos = LangFrame.AbsolutePosition
            local absSize = LangFrame.AbsoluteSize
            local onButton = (pos.X >= LangDropdown.AbsolutePosition.X and pos.X <= LangDropdown.AbsolutePosition.X + LangDropdown.AbsoluteSize.X and
                             pos.Y >= LangDropdown.AbsolutePosition.Y and pos.Y <= LangDropdown.AbsolutePosition.Y + LangDropdown.AbsoluteSize.Y)
            if not onButton and (pos.X < absPos.X or pos.X > absPos.X + absSize.X or pos.Y < absPos.Y or pos.Y > absPos.Y + absSize.Y) then
                LangFrame.Visible = false
            end
        end
        
        if ThemeFrame.Visible then
            local absPos = ThemeFrame.AbsolutePosition
            local absSize = ThemeFrame.AbsoluteSize
            local onButton = (pos.X >= ThemeDropdown.AbsolutePosition.X and pos.X <= ThemeDropdown.AbsolutePosition.X + ThemeDropdown.AbsoluteSize.X and
                             pos.Y >= ThemeDropdown.AbsolutePosition.Y and pos.Y <= ThemeDropdown.AbsolutePosition.Y + ThemeDropdown.AbsoluteSize.Y)
            if not onButton and (pos.X < absPos.X or pos.X > absPos.X + absSize.X or pos.Y < absPos.Y or pos.Y > absPos.Y + absSize.Y) then
                ThemeFrame.Visible = false
            end
        end
    end
end)

RefreshPresetList()

ApplyTheme(Perky.Settings.Theme)
if not Perky.Settings.UIEnabled then
    Main.BackgroundTransparency = 1
    ToggleCircle.Position = UDim2.new(0, 2, 0.5, -11)
    EnableToggle.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
end

print("Perky Hub v" .. Perky.Version .. " loaded successfully!")
