--[[    Perky v0.0.30 - Section 5 of 12 - Core Functions    ]]

local function ApplyTheme(themeName)
    local theme = ThemeColors[themeName] or ThemeColors.Purple
    MainStroke.Color = theme.Primary
    Island.BackgroundColor3 = theme.Primary
    IslandStroke.Color = theme.Secondary
    Glow.ImageColor3 = theme.Primary
    NavBar.BackgroundColor3 = theme.Nav
    ContentContainer.ScrollBarImageColor3 = theme.Primary
    
    for _, particle in ipairs(ConfettiParticles) do
        particle.BackgroundColor3 = theme.Primary
    end
    
    for name, btn in pairs(TabButtons) do
        if name == Perky.CurrentTab then
            btn.BackgroundColor3 = theme.Primary
        else
            btn.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
        end
    end
    
    LogoAccent.TextColor3 = theme.Accent
    
    if ContentFrames["Home"] then
        local home = ContentFrames["Home"]
        if home:FindFirstChild("WelcomeBox") then
            local sub = home.WelcomeBox:FindFirstChild("SubTitle")
            if sub then sub.TextColor3 = theme.Accent end
        end
    end
    
    if ContentFrames["Pages"] then
        local pages = ContentFrames["Pages"]
        if pages:FindFirstChild("PagesTitle") then
            pages.PagesTitle.TextColor3 = theme.Accent
        end
    end
    
    if ContentFrames["Credits"] then
        local credits = ContentFrames["Credits"]
        if credits:FindFirstChild("CreditsTitle") then
            credits.CreditsTitle.TextColor3 = theme.Accent
        end
    end
end

local function AnimateConfetti(expanding)
    local center = UDim2.new(0.5, -3, 0.5, -3)
    for i, particle in ipairs(ConfettiParticles) do
        particle.Visible = true
        particle.Position = center
        
        local angle = (i / #ConfettiParticles) * math.pi * 2
        local distance = expanding and 100 or 0
        local targetX = math.cos(angle) * distance
        local targetY = math.sin(angle) * distance
        
        local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
        local target = UDim2.new(0.5, targetX - 3, 0.5, targetY - 3)
        
        TweenService:Create(particle, tweenInfo, {Position = target}):Play()
    end
    
    if not expanding then
        delay(0.5, function()
            for _, particle in ipairs(ConfettiParticles) do
                particle.Visible = false
            end
        end)
    end
end

local function ApplyTransparency(value)
    if Perky.Settings.UIEnabled then
        Main.BackgroundTransparency = value
    else
        Main.BackgroundTransparency = 1
    end
end

local function SwitchTab(tabName)
    Perky.CurrentTab = tabName
    local theme = ThemeColors[Perky.Settings.Theme]
    for name, btn in pairs(TabButtons) do
        if name == tabName then
            btn.BackgroundColor3 = theme.Primary
            btn.TextColor3 = Color3.new(1,1,1)
        else
            btn.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
            btn.TextColor3 = Color3.fromRGB(180, 180, 180)
        end
    end
    
    for name, frame in pairs(ContentFrames) do
        frame.Visible = (name == tabName)
    end
end
