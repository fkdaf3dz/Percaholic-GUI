--[[    Perky v0.0.30 - Section 17 of 18 - Initialization    ]]

Island.MouseButton1Click:Connect(function()
    AnimateConfetti(true)
    wait(0.3)
    Main.Visible = true
    Island.Visible = false
end)

UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.RightShift then
        if Main.Visible then
            AnimateConfetti(false)
            wait(0.5)
        else
            AnimateConfetti(true)
            wait(0.3)
        end
        Main.Visible = not Main.Visible
        Island.Visible = not Main.Visible
    end
end)

ApplyTheme(Perky.Settings.Theme)
if not Perky.Settings.UIEnabled then
    Main.BackgroundTransparency = 1
    ToggleCircle.Position = UDim2.new(0, 2, 0.5, -11)
    EnableToggle.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
end

print("Perky Hub v" .. Perky.Version .. " loaded successfully!")
