ConfettiContainer.Parent = Island

local function CreateConfettiPiece()
    local piece = Instance.new("Frame")
    piece.Size = UDim2.new(0, 6, 0, 6)
    piece.BackgroundColor3 = ThemeColors[Perky.Settings.Theme].Primary
    piece.BorderSizePixel = 0
    piece.Parent = ConfettiContainer
    piece.Visible = false
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(1, 0)
    corner.Parent = piece
    
    return piece
end

for i = 1, 20 do
    table.insert(ConfettiParticles, CreateConfettiPiece())
end

